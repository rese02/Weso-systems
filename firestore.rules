rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Explicitly allow access to the hotels collection and all sub-documents.
    // This is suitable for development. For production, you would add
    // authentication checks (e.g., `allow read, write: if request.auth != null;`).
    match /hotels/{hotelId}/{document=**} {
      allow read, write: if true;
    }
    match /hotels/{hotelId} {
      allow read, write: if true;
    }
  }
}
