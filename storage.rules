rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // In production, you would restrict this, e.g., to authenticated users
    // or specific paths that are meant to be public.
    match /{allPaths=**} {
      allow read;
      // Allow write access for development. 
      // In production, you MUST secure this rule, for example:
      // allow write: if request.auth != null;
      allow write: if true;
    }
  }
}
